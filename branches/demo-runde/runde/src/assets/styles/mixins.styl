@import "~styles/varibles.styl"

ellipsis()
  overflow hidden
  white-space nowrap
  text-overflow ellipsis
width-height-full()
  height 100%
  width 100%
width-height-same($value)
  width $value
  height $value
wrapper()
  background-color $baseWhiteColor
  height 100%
  width 100%
layout-full($top, $right, $bottom, $left)
  position absolute
  top $top
  right $right
  bottom $bottom
  left $left
baseTextStyle($fontSize = 16px, $color = #606266, $fontWeight = 500, $fontFamily = PingFang SC)
  font-size $fontSize
  color $color
  font-weight $fontWeight
  font-family $fontFamily
break-world()
  word-break break-all
  white-space normal
  word-wrap break-word



