@import "~styles/varibles.styl"

ellipsis()
  overflow hidden
  white-space nowrap
  text-overflow ellipsis
width-height-full()
  height 100%
  width 100%
width-height-same($value)
  width $value
  height $value
wrapper()
  background-color $baseWhiteColor
  height 100%
  width 100%
layout-full($top, $right, $bottom, $left)
  position absolute
  top $top
  right $right
  bottom $bottom
  left $left
baseTextStyle($fontSize = 16px, $color = #606266, $fontWeight = 500, $fontFamily = PingFang SC)
  font-size $fontSize
  color $color
  font-weight $fontWeight
  font-family $fontFamily
break-world()
  word-break break-all
  white-space normal
  word-wrap break-word
cursor-pointer()
  cursor pointer
  user-select none
bg-image($name, $size = 70)
  display inline-block
  width unit($size/ 192, rem)
  height unit($size/ 192, rem)
  background url('~images/' + $name + '.png') no-repeat
  background-size unit($size, px)
  @media screen and (-webkit-min-device-pixel-ratio: 2), screen and (min--moz-device-pixel-ratio: 2) {
    background-image: url('~images/' + $name + '@2x.png')
  }
  @media screen and (-webkit-min-device-pixel-ratio: 3), screen and (min--moz-device-pixel-ratio: 3) {
    background-image: url('~images/' + $name + '@3x.png')
  }
active-image($name)
  background-image url('~images/' + $name + '.png')
  @media screen and (-webkit-min-device-pixel-ratio: 2), screen and (min--moz-device-pixel-ratio: 2) {
    background-image: url('~images/' + $name + '@2x.png')
  }
  @media screen and (-webkit-min-device-pixel-ratio: 3), screen and (min--moz-device-pixel-ratio: 3) {
    background-image: url('~images/' + $name + '@3x.png')
  }


