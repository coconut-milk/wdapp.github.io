@import "~styles/varibles.styl"

ellipsis()
  overflow hidden
  white-space nowrap
  text-overflow ellipsis
width-height-full()
  height 100%
  width 100%
width-height-same($value)
  width $value
  height $value
wrapper()
  background-color $baseBackgroundColor
  height 100%
  width 100%
layout-full($top, $right, $bottom, $left)
  position absolute
  top $top
  right $right
  bottom $bottom
  left $left
generalText()
  color $generalTextColor
  font-family $generalFontFamily
  font-size $generalTextSize
  font-weight $generalFontWeight


