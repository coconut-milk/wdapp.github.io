<template>
  <van-field
    ref="field"
    v-model="value"
    :maxlength="maxlength"
    :placeholder="placeholder"
    @focus="onFocus($event)"
    @blur="onBlur($event)"
  />
</template>

<script>
export default {
  name: "Input",
  data() {
    return {
      value: "",
      maxlength: 300,
      placeholder: "在这里和老师互动哦"
    };
  },
  computed: {
    field() {
      return this.$refs.field;
    }
  },
  methods: {
    onFocus(event) {
      this.$emit("focus", event);
    },
    onBlur(event) {
      this.$emit("blur", event);
    }
  }
};
</script>

