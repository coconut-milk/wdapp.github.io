@import "~styles/varibles.styl"

wrapper($bgColor = $fff)
  background-color $bgColor
  width 100%
  height 100%
width-height-full()
  height 100%
  width 100%
width-height-same($value = 100%)
  width $value
  height $value
layout($top, $right, $bottom, $left)
  position absolute
  top $top
  right $right
  bottom $bottom
  left $left
baseTextStyle($fontSize = 28px, $color = #333333, $fontWeight = 500, $fontFamily = PingFang SC)
  font-size $fontSize
  color $color
  font-weight $fontWeight
  font-family $fontFamily
break-world()
  word-break break-all
  white-space normal
  word-wrap break-word
ellipsis()
  overflow hidden
  white-space nowrap
  text-overflow ellipsis
cursor-pointer()
  cursor pointer
  user-select none
bg-image($name, $size = 70)
  display inline-block
  width unit($size/ 75, rem)
  height unit($size/ 75, rem)
  background url('~images/' + $name + '.png') no-repeat
  background-size unit($size, px)
  @media screen and (-webkit-min-device-pixel-ratio: 2), screen and (min--moz-device-pixel-ratio: 2) {
    background-image: url('~images/' + $name + '@2x.png')
  }
  @media screen and (-webkit-min-device-pixel-ratio: 3), screen and (min--moz-device-pixel-ratio: 3) {
    background-image: url('~images/' + $name + '@3x.png')
  }
active-image($name)
  background-image url('~images/' + $name + '.png')
  @media screen and (-webkit-min-device-pixel-ratio: 2), screen and (min--moz-device-pixel-ratio: 2) {
    background-image: url('~images/' + $name + '@2x.png')
  }
  @media screen and (-webkit-min-device-pixel-ratio: 3), screen and (min--moz-device-pixel-ratio: 3) {
    background-image: url('~images/' + $name + '@3x.png')
  }
vertical-horizontally($height, $width, $position = relative)
  position $position
  top 50%
  left 50%
  margin-top unit(-($height/ 2), px)
  margin-left unit(-($width/ 2), px)
vertical($height, $position = relative)
  position $position
  top 50%
  margin-top unit(-($height/ 2), px)
horizontally($width, $position = relative)
  position $position
  left 50%
  margin-left unit(-($width/ 2), px)



